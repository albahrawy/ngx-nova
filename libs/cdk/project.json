{
  "name": "cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/cdk/src",
  "prefix": "",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/cdk/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/cdk/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/cdk/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/cdk/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/cdk/**/*.ts",
          "libs/cdk/**/*.html",
          "libs/cdk/package.json",
          "libs/cdk/localization/**/*.ts",
          "libs/cdk/localization/**/*.html",
          "libs/cdk/error-handler/**/*.ts",
          "libs/cdk/error-handler/**/*.html",
          "libs/cdk/flex-layout/**/*.ts",
          "libs/cdk/flex-layout/**/*.html",
          "libs/cdk/shared/**/*.ts",
          "libs/cdk/shared/**/*.html",
          "libs/cdk/http/**/*.ts",
          "libs/cdk/http/**/*.html",
          "libs/cdk/format/**/*.ts",
          "libs/cdk/format/**/*.html",
          "libs/cdk/observers/**/*.ts",
          "libs/cdk/observers/**/*.html"
        ]
      }
    }
  }
}
